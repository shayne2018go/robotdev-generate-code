{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": ["es6"],
    "module": "ESNext",
    "allowJs": true,
    "target": "es6",
    "types": ["node", "jest"],
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "exclude": ["node_modules", "src/compile/tokens/programming/**"],
  "include": ["src/**/*"]
}
